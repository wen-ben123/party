{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "rootDir": ".",
    "typeRoots": ["../client/types", "../server/types"],
    "lib": ["ESNext"]
  },
  "include": [
    "./**/*",
    "../env.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}